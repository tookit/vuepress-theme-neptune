{
  "name": "blog",
  "version": "1.0.0",
  "description": "Tookit's Personal Blog",
  "author": "tookit",
  "license": "MIT",
  "dependencies": {
    "vuepress": "1.5.2",
    "vuepress-theme-neptune": "1.0.0"
  },
  "private": true,
  "workspaces": [
    "theme-neptune"
  ],
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "npx aliyun-oss-deploy -p ./docs/.vuepress/dist",
    "publish": "cd ./theme-neptune && npm publish && cd ../ && npm update vuepress-theme-neptune",
    "changelog": "auto-changelog --template changelog-template.hbs -p -u --commit-limit false",
    "changelog-debug": "auto-changelog --template changelog-template.hbs -p --template json --output changelog-data.json"
  },
  "devDependencies": {
    "@vuepress/plugin-google-analytics": "^1.2.0",
    "aliyun-oss-deploy": "^0.1.3",
    "auto-changelog": "2.2.0"
  }
}
